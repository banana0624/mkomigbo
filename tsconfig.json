{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@utils": ["scripts/cli/utils"],
      "@paths": ["scripts/cli/paths"],
      "@/*": ["*"],
      "*": ["src/*", "scripts/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "types": ["react", "react-dom", "node", "mocha", "jest"],
    "lib": ["DOM", "ESNext"],
    "rootDir": "./",               
    "outDir": "dist",              
    "noEmit": false                
  },
  "exclude": ["webpack.config.js", "webpack.config.ts", "node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@utils": ["scripts/cli/utils"],
        "@paths": ["scripts/cli/paths"]
      }
    }
  }
}